#!/bin/bash
#for kvm instance configure the ip address

cat <<EOF > /etc/sysconfig/network-scripts/ifcfg-eth0  
DEVICE="eth0"  
ONBOOT=yes  
BOOTPROTO=static  
IPADDR={{ ip }}  
NETMASK={{ netmask }}  
GATEWAY=192.168.122.1
DNS1=192.168.122.1
EOF

/etc/init.d/network restart

sed -i '/set_ip/ d' /etc/rc.d/rc.local  
